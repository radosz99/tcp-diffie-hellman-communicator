<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab1.server.ServerController">
   <children>
      <Button fx:id="runBtn" layoutX="21.0" layoutY="25.0" mnemonicParsing="false" onAction="#runServer" prefHeight="51.0" prefWidth="209.0" text="Run server" />
      <TableView fx:id="clients" layoutX="245.0" layoutY="27.0" prefHeight="355.0" prefWidth="327.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy></TableView>
      <Button fx:id="messageBtn" layoutX="22.0" layoutY="141.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="25.0" prefWidth="209.0" text="Send message" />
      <TextField fx:id="messageTextField" layoutX="22.0" layoutY="102.0" prefHeight="25.0" prefWidth="209.0" />
      <TextArea fx:id="messagesTextArea" layoutX="21.0" layoutY="178.0" prefHeight="204.0" prefWidth="209.0" />
      <Label layoutX="22.0" layoutY="85.0" text="Message:" />
   </children>
</AnchorPane>
